---
import Logo from "./Logo.astro";
import Container from "./Container.astro";
import { LINKS } from "../consts";

// Detectar si estamos en la home
const isHome = Astro.url.pathname === import.meta.env.BASE_URL;
---

<header id="header" class={`fixed top-0 w-full z-50 transition-all duration-300 ${isHome ? '' : 'bg-white'}`}>
	<Container size="md">
		<div class="flex h-16 items-center justify-between">
			<div class="md:flex md:items-center md:gap-12">
				<a class="block" href="/">
					<span class="sr-only">Home</span>
					<Logo class="text-[#181b32]" />
					
				</a>
			</div>

			<div class="hidden md:block">
				<nav aria-label="Global">
					<ul class="flex items-center gap-6 text-sm">
						{LINKS.map(link => (
							<li>
								<a
									class="text-gray-500 transition hover:text-gray-500/75"
									href={link.HREF}
								>
									{link.TEXT}
								</a>
							</li>
						))}
					</ul>
				</nav>
			</div>

			<div class="flex items-center gap-4">
				<div class="block md:hidden">
					<button
						id="hamburger-button"
						class="relative z-50 rounded-sm bg-gray-100 p-2 text-gray-600 transition hover:text-gray-600/75"
					>
						<svg
							id="menu-icon"
							xmlns="http://www.w3.org/2000/svg"
							class="size-5"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
							stroke-width="2"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								d="M4 6h16M4 12h16M4 18h16"></path>
						</svg>
						<svg
							id="close-icon"
							xmlns="http://www.w3.org/2000/svg"
							class="hidden size-5"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
							stroke-width="2"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								d="M6 18L18 6M6 6l12 12"
							></path>
						</svg>
					</button>
				</div>
			</div>
		</div>
	</Container>
	<div
		id="mobile-menu"
		class="fixed inset-0 z-40 flex items-center justify-center bg-white md:hidden"
	>
		<nav aria-label="Global mobile" class="p-4">
			<ul class="flex flex-col items-center gap-6 text-2xl">
				{LINKS.map(link => (
					<li>
						<a
							class="text-gray-500 transition hover:text-gray-500/75"
							href={link.HREF}
						>
							{link.TEXT}
						</a>
					</li>
				))}
			</ul>
		</nav>
	</div>
</header>

<style>
	#mobile-menu {
		transform: translateY(-100%);
		transition: transform 0.4s ease-in-out;
	}
	#mobile-menu.is-open {
		transform: translateY(0);
	}

	/* Línea de separación al hacer scroll */
	#header.scrolled {
		border-bottom: 1px solid rgb(229 231 235);
		background-color: white;
	}
</style>

<script>
	const hamburgerButton = document.getElementById("hamburger-button");
	const mobileMenu = document.getElementById("mobile-menu");
	const menuIcon = document.getElementById("menu-icon");
	const closeIcon = document.getElementById("close-icon");

	if (hamburgerButton && mobileMenu && menuIcon && closeIcon) {
		hamburgerButton.addEventListener("click", () => {
			mobileMenu.classList.toggle("is-open");
			menuIcon.classList.toggle("hidden");
			closeIcon.classList.toggle("hidden");
		});
	}

	// Detectar scroll para agregar línea de separación
	const header = document.getElementById("header");
	
	window.addEventListener("scroll", () => {
		if (window.scrollY > 0) {
			header?.classList.add("scrolled");
		} else {
			header?.classList.remove("scrolled");
		}
	});
</script>