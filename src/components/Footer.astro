---
import Logo from './Logo.astro';
import Container from './Container.astro';
import { SOCIALS } from '../consts';
---

<footer class="relative bg-white z-10 border-t border-gray-100">
  <Container size="md">
    <div class="py-12 flex flex-col sm:flex-row items-center justify-between gap-6">
      <!-- Logo y Copyright -->
      <div class="flex flex-col sm:flex-row items-center gap-4 text-sm text-gray-500">
        <a class="inline-block" href="/">
          <span class="sr-only">Home</span>
          <Logo class="text-[#181b32]" />
        </a>
        <span class="hidden sm:inline">|</span>
        <span>Â© {new Date().getFullYear()} All rights reserved</span>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        {SOCIALS.map((social) => (
          <a
            href={social.HREF}
            target={social.ICON === 'email' ? undefined : '_blank'}
            rel={social.ICON === 'email' ? undefined : 'noopener noreferrer'}
            aria-label={social.NAME}
            class="text-gray-600 hover:text-gray-900 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor">
              <use href={`public/social.svg#${social.ICON}`}></use>
            </svg>
          </a>
        ))}
      </div>
    </div>
  </Container>
</footer>