---
import Container from "./Container.astro";
import Logo from "./Logo.astro";
import { SOCIALS, LINKS } from "../consts";

const base = import.meta.env.BASE_URL;
const socialSvgPath = `${base}social.svg`;
const currentYear = new Date().getFullYear();
---

<footer class="relative bg-white z-10 border-t border-gray-100">
  <Container size="md">
    <!-- Main Footer Content -->
    <div class="py-16">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-8">
        
        <!-- Brand Section -->
        <div class="flex flex-col items-center md:items-start gap-4">
          <a class="inline-block transition-transform hover:scale-105" href={base}>
            <span class="sr-only">Inicio</span>
            <Logo class="text-[#181b32]" />
          </a>
        </div>

        <!-- Quick Links -->
        <div class="flex flex-col items-center md:items-start">
          <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">
            Navegación
          </h3>
          <nav class="flex flex-col gap-3">
            {LINKS.map((link) => (
              <a href={`${base}${link.HREF}`} class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
                {link.TEXT}
              </a>
            ))}
          </nav>
        </div>

        <!-- Connect Section -->
        <div class="flex flex-col items-center md:items-start">
          <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">
            Conecta
          </h3>
          <div class="flex flex-wrap gap-3 justify-center md:justify-start">
            {SOCIALS.map((social) => (
              <a
                href={social.HREF}
                target={social.ICON === 'email' ? undefined : '_blank'}
                rel={social.ICON === 'email' ? undefined : 'noopener noreferrer'}
                aria-label={social.NAME}
                class="group relative"
              >
                <div class="relative p-3 rounded-lg bg-gray-50 text-gray-600 transition-all duration-300 hover:bg-gray-900 hover:text-white hover:shadow-lg hover:-translate-y-1">
                  <svg class="w-5 h-5" fill="currentColor">
                    <use href={`${socialSvgPath}#${social.ICON}`}></use>
                  </svg>
                </div>
                <!-- Tooltip -->
                <span class="absolute -top-10 left-1/2 -translate-x-1/2 px-3 py-1.5 bg-gray-900 text-white text-xs rounded-md opacity-0 group-hover:opacity-100 transition-opacity duration-200 whitespace-nowrap pointer-events-none">
                  {social.NAME}
                  <span class="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-gray-900"></span>
                </span>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-100 py-6">
      <div class="flex items-center justify-center text-sm text-gray-500">
        <p>
          © {currentYear} <span class="font-medium text-gray-700">Juan Betancur</span>. Todos los derechos reservados.
        </p>
      </div>
    </div>
  </Container>
</footer>