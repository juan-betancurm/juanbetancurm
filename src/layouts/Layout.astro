---
// Layout.astro
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";
const { title, description, fullWidth = false } = Astro.props
import { SITE } from "src/consts"


---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo-marca-personal.svg" />
		<meta name="generator" content={Astro.generator} />
		<BaseHead title={`${title} | ${SITE.TITLE}`} description={description} />
	</head>
	<body >
		<Header />
		
		<main class={fullWidth ? "" : "mx-auto max-w-7xl px-4 md:px-6 lg:px-8"}>
			
				<slot />
			
		<Footer />
	</body>
</html>